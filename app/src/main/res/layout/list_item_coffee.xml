<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <TextView
        tools:text="coffee_title"
        android:textStyle="bold"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_coffee_title_text_view"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/list_item_coffee_known_check_box"
        android:layout_toStartOf="@+id/list_item_coffee_known_check_box"
        android:layout_above="@+id/list_item_coffee_date_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        tools:text="coffee_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_coffee_date_text_view"
        android:layout_below="@+id/list_item_coffee_known_check_box"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/list_item_coffee_known_check_box"
        android:layout_toStartOf="@+id/list_item_coffee_known_check_box" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_coffee_known_check_box"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>